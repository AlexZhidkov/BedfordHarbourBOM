<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <client>
      <endpoint address="net.tcp://localhost:8009/SupplierService"
                binding="netTcpBinding"
                contract="Bom.Client.Contracts.ISupplierService"
                  />
      <endpoint address="net.tcp://localhost:8009/StockService"
                binding="netTcpBinding"
                contract="Bom.Client.Contracts.IStockService"
                  />
      <endpoint address="net.tcp://localhost:8009/PartService"
                binding="netTcpBinding"
                contract="Bom.Client.Contracts.IPartService"
                  />
    </client>
    <bindings>
      <netTcpBinding>
        <binding maxReceivedMessageSize="2000000" transactionFlow="true">
          <reliableSession enabled="true" />
        </binding>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>